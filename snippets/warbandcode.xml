<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<dht:template xmlns:dht="dynamic-html-templates">
	<dht:stylesheet src="warbandcode.css"/>
	<dht:stylesheet src="../styles/bluebox.css"/>
	<dht:script src="warbandcode.js"/>
	<dht:snippet name="warbandcode">
		<div id="warbandcode" class="blue">
			<h1>Warband code</h1>
			<div class="panel">
				<span>Your warband is encoded like this</span>
				<textarea autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false">{{warbandcode}}</textarea>
				<p>Note that there is no line wrap.</p>
			</div>
			<div class="buttons">
				<input type="button" value="apply" dht:onclick="applyClick"/>
				<input type="button" value="close" dht:onclick="closeClick"/>
			</div>
		</div>
	</dht:snippet>
</dht:template>
