<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<dht:template xmlns:dht="dynamic-html-templates">
	<dht:include type="stylesheet" src="restore.css"/>
	<dht:include type="script" src="table.js"/>
	<dht:include type="script" src="dummy.js"/>
	<dht:snippet name="main">
		<div>
			<!-- test -->
			<h1>localStore</h1>
			<dht:insert-snippet name="table-frame"/>
		</div>
	</dht:snippet>
	<dht:snippet name="table-frame">
		<table class="localStore">
			<tr>
				<th>Warband</th>
				<th>Figure count</th>
				<th>Points</th>
				<th>Last modified</th>
			</tr>
			<dht:call-function name="listStoredData"/>
		</table>
	</dht:snippet>
	<dht:snippet name="table-row">
		<tr data-id="{{pid}}" dht:onclick="trClick" >
			<td>{{warband-name}}</td>
			<td>{{figure-count}}</td>
			<td>{{points}}</td>
			<td>{{last-modified}}</td>
		</tr>
	</dht:snippet>
</dht:template>
