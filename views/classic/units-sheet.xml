<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<dht:template xmlns:dht="dynamic-html-templates">
	<dht:snippet name="classic-unit-table">
		<table class="unit box-shadow" data-unitindex="{{index}}">
			<th class="interactive" colspan="3">
				<span data-valueof="name">{{name}}</span>
				<input type="text" maxlength="150" placeholder="{{default-name}}" data-editor="name" data-unitindex="-1"/>
				<span data-valueof="count">&#32;</span>
				<input type="number" min="1" max="25" maxlength="2" data-editor="count" data-unitindex="-1" dht:onchange="editorEvent" />
			</th>
			<tr/>
			<tr>
				<td class="interactive" data-action="showunitmenu" data-unitindex="-1">
					<span>Points:&#32;</span>
					<span data-staticvalueof="points">{{points}}</span>
				</td>
				<td class="interactive">
					<span>Quality:&#32;</span>
					<span data-valueof="quality">{{quality}}</span>
					<dht:insert-snippet name="quality-selector"/>
				</td>
				<td class="interactive">
					<span>Combat:&#32;</span>
					<span data-valueof="combat">{{combat}}</span>
					<dht:insert-snippet name="combat-selector"/>
				</td>
			</tr>
			<tr>
				<td class="passive">Special rules:</td>
				<td class="interactive" colspan="2">
					<span data-staticvalueof="specialrules">
						<dht:call-function name="listSpecialRules"/>
					</span>
					<dht:insert-snippet name="specialrules-selector"/>
				</td>
			</tr>
		</table>
	</dht:snippet>
	<dht:snippet name="quality-selector">
		<select size="1" data-editor="quality" data-unitindex="-1">
			<option value="2">2+</option>
			<option value="3">3+</option>
			<option value="4">4+</option>
			<option value="5">5+</option>
			<option value="6">6+</option>
		</select>
	</dht:snippet>
	<dht:snippet name="combat-selector">
		<select size="1" data-editor="combat" data-unitindex="-1">
			<option value="6">6</option>
			<option value="5">5</option>
			<option value="4">4</option>
			<option value="3">3</option>
			<option value="2">2</option>
			<option value="1">1</option>
			<option value="0">0</option>
		</select>
	</dht:snippet>
	<dht:snippet name="specialrules-selector">
		<select size="1" data-action="addspecialrule" data-unitindex="-1">
			<option value="">{{add-special-rule}}</option>
		</select>
	</dht:snippet>
</dht:template>
